  <h3>新元号候補</h3>
  <h1><%= @post_gengou %></h1>
  <table>
    <tr>
      <td><%= @gengou0 %>：</td>
      <td>登場回数 &nbsp; <%= @gengou0_count %> &nbsp; </td>
      <td>回</td>
    </tr>
    <tr>
      <td><%= @gengou1 %>：</td>
      <td>登場回数 &nbsp; <%= @gengou1_count %> &nbsp; </td>
